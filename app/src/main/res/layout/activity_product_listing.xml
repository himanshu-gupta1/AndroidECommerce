<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ProductListingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_prodImage"
                android:layout_width="66dp"
                android:layout_height="133dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/iphnx"
                android:layout_marginBottom="10dp"
                />



        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bt_addToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/cart"
            android:layout_gravity="right"
            android:src="@drawable/add_cart"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.6dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="15.4dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <customfonts.TextViewSFProDisplayRegular
                android:id="@+id/tv_prodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_phone"
                android:textColor="@color/black"
                android:textSize="11.7sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <customfonts.MyTextView_Roboto_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Rs"
                    android:textColor="@color/black"
                    android:textSize="13.3sp"
                    android:textStyle="bold" />

                <customfonts.MyTextView_Roboto_Bold
                    android:id="@+id/tv_salePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/_60"
                    android:textColor="@color/black"
                    android:textSize="13.3sp"
                    android:textStyle="bold" />

                <customfonts.TextViewSFProDisplayMedium
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="@string/_60"
                    android:textColor="#868791"
                    android:textSize="12.3sp" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_line" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <TextView
               android:id="@+id/tv_description"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:text="Description"
               android:gravity="center"
               />


           <!--<TextView-->
               <!--android:id="@+id/tv_specification"-->
               <!--android:layout_width="match_parent"-->
               <!--android:layout_height="100dp"-->
               <!--android:text="Specificatiom"-->
               <!--android:gravity="center"-->
               <!--/>-->






       </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_line" />



        <customfonts.TextViewSFProDisplayBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Ratings/Reviews"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <customfonts.TextViewSFProDisplayBlack
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="50sp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/star" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <customfonts.TextViewSFProDisplayBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Seller Information"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/tv_sellerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SupercomNet"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <customfonts.TextViewSFProDisplayBlack
                    android:id="@+id/tv_sellerRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="4.4"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_allSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:background="@drawable/round_corners"
                android:padding="20dp"
                android:text="Get All Sellers" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <customfonts.TextViewSFProDisplayBlack
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="User Reviews"
                android:textSize="20sp"
                android:textStyle="italic" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_urating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="25sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/star" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Anonymous"
                    android:textSize="25sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_ucomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lorem ipsum  sdsdada sada"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_allReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:background="@drawable/round_corners"
                android:padding="20dp"
                android:text="Get All Reviews" />

        </LinearLayout>



    </LinearLayout>

</ScrollView>