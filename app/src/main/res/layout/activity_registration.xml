<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="150dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundnew">
    <ProgressBar
        android:id="@+id/registration_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/NameOfUser"
        android:hint="Name"
        android:inputType="textPersonName"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/user_photo"
        android:paddingLeft="15dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/emailOfUser"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/email"
        android:paddingLeft="15dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/password"
        android:paddingLeft="15dp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/confirmPassword"
        android:hint="Confirm Password"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/password"
        android:paddingLeft="15dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/addressLine1"
        android:hint="Address Line 1"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/icons8"
        android:paddingLeft="15dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/addressLine2"
        android:hint="Address Line 2"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/icons8"
        android:paddingLeft="15dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/addressLine3"
        android:hint="Address Line 3"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/icons8"
        android:paddingLeft="15dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/state"
        android:hint="State"
        android:inputType="text"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/state"
        android:paddingLeft="15dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/country"
        android:hint="Country"
        android:inputType="text"
        android:paddingTop="8dp"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/country"
        android:paddingLeft="15dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/pinCode"
        android:hint="Pin Code"
        android:inputType="number"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/pincode"
        android:paddingLeft="15dp"
        />
    <Button
        android:id="@+id/email_sign_in_button"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round"
        android:text="@string/action_registration"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold" />




</LinearLayout>
